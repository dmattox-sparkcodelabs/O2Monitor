# O2 Monitor Environment Variables
# Copy to .env and fill in real values

# PagerDuty Events API v2 routing key
PAGERDUTY_ROUTING_KEY=your_routing_key_here

# Healthchecks.io ping URL
HEALTHCHECKS_PING_URL=https://hc-ping.com/your-uuid-here

# Flask secret key for sessions (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=your_random_secret_key_here

# Optional: Alexa Notify Me access code
ALEXA_NOTIFY_CODE=

# Mock mode - set to true to use simulated hardware
MOCK_HARDWARE=false

# ============================================
# Vision Service Configuration (Windows PC)
# ============================================

# Vision service URL for Pi to poll
VISION_SERVICE_URL=http://192.168.1.100:8100

# Detection thresholds
VISION_DETECTION__EYES_CLOSED_ALERT_SECONDS=300
VISION_DETECTION__DAD_GONE_TIMEOUT_SECONDS=600
VISION_DETECTION__FACE_SIMILARITY_THRESHOLD=0.6
VISION_DETECTION__EAR_CLOSED_THRESHOLD=0.2
VISION_DETECTION__EAR_OPEN_THRESHOLD=0.25

# Polling intervals (seconds)
VISION_CAMERA__IDLE_POLL_SECONDS=300
VISION_CAMERA__ACTIVE_POLL_SECONDS=60
VISION_CAMERA__ALERT_POLL_SECONDS=60

# Server binding
VISION_SERVER__API_HOST=0.0.0.0
VISION_SERVER__API_PORT=8100

# GPU device index
VISION_GPU__DEVICE=0
